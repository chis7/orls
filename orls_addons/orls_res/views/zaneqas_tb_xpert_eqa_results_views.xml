<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_open_form_view_server" model="ir.actions.server">
        <field name="name">General Surgery Rotation Assessment</field>
        <field name="model_id" ref="model_orls_gen_surgery_resident_log"/>
        <field name="binding_model_id" ref="model_orls_gen_surgery_resident_log"/>
        <field name="state">code</field>
        <field name="code">
            action = {
            'type': 'ir.actions.act_window',
            'name': 'General Surgery Rotation Assessment',
            'res_model': 'orls.gen.surgery.resident.log',
            'view_mode': 'form',
            'view_id': env.ref('orls.orls_gen_surgery_rotation_procedures_operations_assessment_wizard_form').id,
            'res_id': record.id,
            'target': 'new'
            }
        </field>
    </record>

    <record id="orls_gen_surgery_resident_log_tree" model="ir.ui.view">
        <field name="name">orls.gen.surgery.resident.log.tree</field>
        <field name="model">orls.gen.surgery.resident.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="create_uid" string="Resident"/>
                <field name="r_l_internship_center_id"/>
                <field name="r_l_start_date"/>
                <field name="r_l_end_date"/>
                <field name="is_supervisor" column_invisible="True"/>
                <button name="open_assessment_wizard"
                        confirm="You are about to review rotation entries. Are you sure you want to proceed?"
                        string="Supervisor Checks"
                        type="object"
                        invisible="is_supervisor == False"
                        class="btn-primary"/>
            </tree>

        </field>
    </record>

    <record id="orls_gen_surgery_resident_log_form" model="ir.ui.view">
        <field name="name">orls.gen.surgery.resident.log.form</field>
        <field name="model">orls.gen.surgery.resident.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_save_eqa_result_as_draft" data-hotkey="v"
                            confirm="Are you sure you want to save as draft?"
                            string="Save" class="btn-primary" type="object"
                            context="{'validate_analytic': True}"
                            invisible="r_l_state != 'draft' "/>
                    <button name="action_submit_eqa_result_to_supervisor" data-hotkey="v"
                            confirm="Are you sure you want to submit for assessment?"
                            string="Submit" class="btn-primary" type="object"
                            context="{'validate_analytic': True}"
                            invisible="r_l_state != 'draft' "/>
                    <button name="action_download_csv" string="CSV" type="object" class="btn-primary"/>
<!--                    <button name="action_download_json" string="JSON" type="object" class="btn-primary"/>-->
                    <button name="action_download_all_json" string="JSON" type="object" class="btn-primary"/>
                    <button name="generate_reports_from_tables" type="object" string="Generate PDF Reports" class="btn-primary"/>


                    <!--                    <field name="state_of_cycle" invisible="1"/>-->
                    <!--                    <button name="action_preview_pdf" type="object" string="Preview Attachment" class="btn-primary"/>-->
                    <!-- Print Button -->
                    <!--                    <button name="print_report" type="object" string="Print"-->
                    <!--                            class="oe_highlight"-->
                    <!--                            invisible="state_of_cycle != 'resultsPublished'"/>-->

                    <!-- Other form fields -->

                    <field name="r_l_state" context="{'validate_analytic': True}" widget="statusbar"
                           statusbar_visible="draft,supervisor,approved"
                           options="{'clickable':'1'}"/>

                </header>

                <sheet>

                    <notebook>
                        <page string="Surgical toilet-10(p)" id="orls_surgical_toilet_ids">
                            <field name="orls_surgical_toilet_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="s_t_number_of_cases"/>
                                    <field name="s_t_file_no"/>
                                    <field name="s_t_date"/>
                                    <field name="s_t_resident_involvement"/>
                                    <field name="s_t_checkbox_field" string="Supervisor Check" readonly="1"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Suturing Wound-10(p)" id="orls_suturing_wound_ids">
                            <field name="orls_suturing_wound_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="s_w_number_of_cases"/>
                                    <field name="s_w_file_no"/>
                                    <field name="s_w_date"/>
                                    <field name="s_w_resident_involvement"/>
                                    <field name="s_w_checkbox_field" string="Supervisor Check" readonly="1"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Incision and drainage of Abscess 1 (O) 2(p)"
                              id="orls_incision_drainage_abscess_ids">
                            <field name="orls_incision_drainage_abscess_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="a_d_number_of_cases"/>
                                    <field name="a_d_file_no"/>
                                    <field name="a_d_date"/>
                                    <field name="a_d_resident_involvement"/>
                                    <field name="a_d_checkbox_field" string="Supervisor Check" readonly="1"/>
                                    <!--                                    <field name="supervisor_id"/>-->
                                </tree>
                            </field>
                        </page>
                        <page string="Insertion of chest tubes 3(p)" id="orls_insertion_chest_tubes_ids">
                            <field name="orls_insertion_chest_tubes_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="c_t_number_of_cases"/>
                                    <field name="c_t_file_no"/>
                                    <field name="c_t_date"/>
                                    <field name="c_t_resident_involvement"/>
                                    <field name="c_t_checkbox_field" string="Supervisor Check" readonly="1"/>
                                    <!--                                    <field name="supervisor_id"/>-->

                                </tree>
                            </field>
                        </page>
                        <page string="Removal of stitches 10(p)" id="orls_removal_of_stitches_ids">
                            <field name="orls_removal_of_stitches_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="r_s_number_of_cases"/>
                                    <field name="r_s_file_no"/>
                                    <field name="r_s_date"/>
                                    <field name="r_s_resident_involvement"/>
                                    <field name="r_s_checkbox_field" string="Supervisor Check" readonly="1"/>
                                    <!--                                    <field name="supervisor_id"/>-->

                                </tree>
                            </field>
                        </page>

                    </notebook>
                    <br/>
                    <notebook>
                        <page string="Monthly Performance Review" id="rif_detection_result">
                            <field name="orls_operation_monthly_review_lines_ids">
                                <tree editable="top">
                                    <field name="m_p_month"/>
                                    <field name="m_p_resident_comment"/>
                                    <field name="m_p_supervisor_comment" readonly="1"/>
                                    <field name="m_p_resident_coordinator_comment" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Clinical/Audit Meetings Presented" id="rif_detection_result">
                            <field name="orls_operation_clinical_or_audit_meetings_presented_lines_ids">
                                <tree editable="bottom">
                                    <field name="c_a_date"/>
                                    <field name="c_a_topic"/>
                                    <field name="c_a_venue"/>
                                    <field name="c_a_consultant_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Teaching Rounds Attended" id="tb_detection_result">
                            <field name="orls_operation_teaching_rounds_attended_lines_ids">
                                <tree editable="bottom">
                                    <field name="t_r_date"/>
                                    <field name="t_r_ward_round"/>
                                    <field name="t_r_venue"/>
                                    <field name="t_r_consultant_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                    <page string="Knowledge" id="orls_overall_assessment_area_knowledge_lines_ids">
                        <field name="orls_overall_assessment_area_knowledge_lines_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="name" readonly="1"/>
                                <field name="grade"  readonly="1"/>
                                <field name="remarks"  readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Clinical Skills" id="orls_overall_assessment_area_clinical_skills_lines_ids">
                        <field name="orls_overall_assessment_area_clinical_skills_lines_ids">
                             <tree editable="bottom" create="0" delete="0">
                                <field name="name" readonly="1"/>
                                <field name="grade"  readonly="1"/>
                                <field name="remarks"  readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Professional Conduct"
                          id="orls_overall_assessment_area_professional_conduct_lines_ids">
                        <field name="orls_overall_assessment_area_professional_conduct_lines_ids">
                             <tree editable="bottom" create="0" delete="0">
                                <field name="name" readonly="1"/>
                                <field name="grade"  readonly="1"/>
                                <field name="remarks"  readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Leadership Qualities"
                          id="orls_overall_assessment_area_leadership_qualities_lines_ids">
                        <field name="orls_overall_assessment_area_leadership_qualities_lines_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="name" readonly="1"/>
                                <field name="grade"  readonly="1"/>
                                <field name="remarks"  readonly="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Overall Assessment"
                          id="orls_surgery_overall_assessment_ids">
                        <field name="orls_surgery_overall_assessment_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="supervisor_comment" readonly="1"/>
                                <field name="coordinator_comment"  readonly="1"/>
                                <field name="grading"  readonly="1"/>
                                <field name="overall_score"  readonly="1"/>
                            </tree>
                        </field>
                    </page>

                </notebook>

                </sheet>
                <div class="oe_chatter" context="{'validate_analytic': True}">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

